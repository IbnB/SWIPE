<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/gridLayout">

    </GridLayout>

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text=""
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/currentProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text=""
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="true" />

    <Button
        style="@style/btnStyleArsenic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start a new session"
        android:textSize="20dip"
        android:id="@+id/buttonStart"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="154dp" />

    <Button
        style="@style/btnStyleOrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop this session"
        android:textSize="20dip"
        android:id="@+id/buttonStop"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="154dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendServiceProgressBar"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_alignTop="@+id/buttonStart"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live mode"
        android:id="@+id/liveMode"
        android:layout_above="@+id/info"
        android:layout_alignEnd="@+id/info" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The smartwatch is not connected. Please turn on it, or be sure it is close to the smartphone. If the problem persists, please go directly to the &quot;Android wear&quot; application to configure your smartwatch device."
        android:id="@+id/notConnected"
        android:background="@color/wallet_bright_foreground_disabled_holo_light"
        android:autoText="false"
        android:gravity="center"
        android:visibility="invisible"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="150dp" />

    <ProgressBar
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarWhenStarted"
        android:layout_below="@+id/liveMode"
        android:layout_toEndOf="@+id/buttonStart"
        android:indeterminate="true" />


</RelativeLayout>
